{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth.uid == $uid",
        ".write": "root.child('users').child('moderator').val() === true"
      }
    },
    "users_data": {
      "$uid": {
        ".read": "auth.uid == $uid"
      }
    },
    "someCollection": {
      "$pid": {
        ".validate": "dateCreated.val() <= now"
      }
    },
    ".read": "auth != null",
    ".write": "auth != null"
  }
}